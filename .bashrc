# IP address lookup
alias whatismyip="whatsmyip"
function whatsmyip () {
    iface=$(ip route get 1.1.1.1 2>/dev/null | awk '{for(i=1;i<=NF;i++) if ($i=="dev") print $(i+1)}')
    if [ -z "$iface" ]; then
        iface=$(route | grep '^default' | awk '{print $8}')
    fi

    # Internal IP Lookup
    if command -v ip &> /dev/null; then
        echo -n "Internal IP: "
        ip addr show "$iface" | grep "inet " | awk '{print $2}' | cut -d/ -f1
    else
        echo -n "Internal IP: "
        ifconfig "$iface" | grep "inet " | awk '{print $2}'
    fi

    # External IP Lookup
    echo -n "External IP: "
    curl -s ifconfig.me
}

# Trim leading and trailing spaces (for scripts)
trim() {
	local var=$*
	var="${var#"${var%%[![:space:]]*}"}" # remove leading whitespace characters
	var="${var%"${var##*[![:space:]]}"}" # remove trailing whitespace characters
	echo -n "$var"
}

# git additions because i'm lazy
# inspired by 'GitHub Titus Additions'
gitc() {
    if ! git rev-parse --is-inside-work-tree &>/dev/null; then
        echo "Error: Not a git repository." >&2
        return 1
    fi
    if [[ $# -eq 0 ]]; then
        echo "Error: Commit message required." >&2
        return 1
    fi
    git add -A
    echo "Staged changes:"
    git status --short
    git commit -m "$*"
}

gits() {
    git status --short
}

